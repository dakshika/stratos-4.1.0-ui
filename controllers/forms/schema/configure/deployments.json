{
    "type":"object",
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "root",
    "title": "Deployment Definition",
    "name": "Deployment Definition",
    "required":false,
    "properties":{
        "id": {
            "type":"string",
            "id": "root/id",
            "default": "isuruh-ec2",
            "required":false
        },
        "partitionGroup": {
            "type":"object",
            "id": "root/partitionGroup",
            "required":false,
            "properties":{
                "id": {
                    "type":"string",
                    "id": "root/partitionGroup/id",
                    "default": "ec2",
                    "required":false
                },
                "partitionAlgo": {
                    "type":"string",
                    "id": "root/partitionGroup/partitionAlgo",
                    "default": "one-after-another",
                    "required":false
                },
                "partition": {
                    "type":"array",
                    "id": "root/partitionGroup/partition",
                    "required":false,
                    "items":
                    {
                        "type":"object",
                        "id": "root/partitionGroup/partition/0",
                        "required":false,
                        "properties":{
                            "id": {
                                "type":"string",
                                "id": "root/partitionGroup/partition/0/id",
                                "default": "P1",
                                "required":false
                            },
                            "partitionMax": {
                                "type":"string",
                                "id": "root/partitionGroup/partition/0/partitionMax",
                                "default": "3",
                                "required":false
                            },
                            "partitionMin": {
                                "type":"string",
                                "id": "root/partitionGroup/partition/0/partitionMin",
                                "default": "1",
                                "required":false
                            }
                        }
                    }


                }
            }
        }
    }
}

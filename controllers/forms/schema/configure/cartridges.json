{
    "type":"object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "id": "root",
    "title": "Cartridge Definition",
    "name": "Cartridge ",
    "required":false,
    "properties":{
        "defaultAutoscalingPolicy": {
            "type":"string",
            "id": "root/defaultAutoscalingPolicy",
            "default": "economyPolicy",
            "required":false
        },
        "description": {
            "type":"string",
            "id": "root/description",
            "default": "PHP Cartridge",
            "required":false
        },
        "displayName": {
            "type":"string",
            "id": "root/displayName",
            "default": "PHP",
            "required":false
        },
        "host": {
            "type":"string",
            "id": "root/host",
            "default": "stratos.org",
            "required":false
        },
        "iaasProvider": {
            "type":"array",
            "id": "root/iaasProvider",
            "required":false,
            "items":
            {
                "type":"object",
                "id": "root/iaasProvider/0",
                "required":false,
                "properties":{
                    "imageId": {
                        "type":"string",
                        "id": "root/iaasProvider/0/imageId",
                        "default": "ap-southeast-1/ami-2e0d5a7c",
                        "required":false
                    },
                    "maxInstanceLimit": {
                        "type":"string",
                        "id": "root/iaasProvider/0/maxInstanceLimit",
                        "default": "4",
                        "required":false
                    },
                    "networkInterfaces": {
                        "type":"array",
                        "id": "root/iaasProvider/0/networkInterfaces",
                        "required":false,
                        "items":[
                            {
                                "type":"object",
                                "id": "root/iaasProvider/0/networkInterfaces/0",
                                "required":false,
                                "properties":{
                                    "networkUuid": {
                                        "type":"string",
                                        "id": "root/iaasProvider/0/networkInterfaces/0/networkUuid",
                                        "default": "fb9c21f4-0672-48b2-8279-77334bb63a53",
                                        "required":false
                                    }
                                }
                            },
                            {
                                "type":"object",
                                "id": "root/iaasProvider/0/networkInterfaces/1",
                                "required":false,
                                "properties":{
                                    "networkUuid": {
                                        "type":"string",
                                        "id": "root/iaasProvider/0/networkInterfaces/1/networkUuid",
                                        "default": "1e43f86f-4165-4f2e-8017-dd4cfb5548b0",
                                        "required":false
                                    }
                                }
                            }
                        ]
                    },
                    "property": {
                        "type":"array",
                        "id": "root/iaasProvider/0/property",
                        "required":false,
                        "items":[
                            {
                                "type":"object",
                                "id": "root/iaasProvider/0/property/0",
                                "required":false,
                                "properties":{
                                    "name": {
                                        "type":"string",
                                        "id": "root/iaasProvider/0/property/0/name",
                                        "default": "instanceType",
                                        "required":false
                                    },
                                    "value": {
                                        "type":"string",
                                        "id": "root/iaasProvider/0/property/0/value",
                                        "default": "m1.medium",
                                        "required":false
                                    }
                                }
                            },
                            {
                                "type":"object",
                                "id": "root/iaasProvider/0/property/1",
                                "required":false,
                                "properties":{
                                    "name": {
                                        "type":"string",
                                        "id": "root/iaasProvider/0/property/1/name",
                                        "default": "keyPair",
                                        "required":false
                                    },
                                    "value": {
                                        "type":"string",
                                        "id": "root/iaasProvider/0/property/1/value",
                                        "default": "xxxxxxxx",
                                        "required":false
                                    }
                                }
                            }
                        ]
                    },
                    "type": {
                        "type":"string",
                        "id": "root/iaasProvider/0/type",
                        "default": "ec2",
                        "required":false
                    }
                }
            }


        },
        "loadBalancer": {
            "type":"object",
            "id": "root/loadBalancer",
            "required":false,
            "properties":{
                "property": {
                    "type":"object",
                    "id": "root/loadBalancer/property",
                    "required":false,
                    "properties":{
                        "name": {
                            "type":"string",
                            "id": "root/loadBalancer/property/name",
                            "default": "default.load.balancer",
                            "required":false
                        },
                        "value": {
                            "type":"string",
                            "id": "root/loadBalancer/property/value",
                            "default": "true",
                            "required":false
                        }
                    }
                },
                "type": {
                    "type":"string",
                    "id": "root/loadBalancer/type",

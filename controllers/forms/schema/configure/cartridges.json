                    }
                },
                {
                    "type":"object",
                    "id": "root/portMapping/1",
                    "required":false,
                    "properties":{
                        "port": {
                            "type":"string",
                            "id": "root/portMapping/1/port",
                            "default": "443",
                            "required":false

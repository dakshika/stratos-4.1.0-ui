                        "protocol": {
                            "type":"string",
                            "id": "root/portMapping/0/protocol",
                            "default": "http",
                            "required":false
                        },
                        "proxyPort": {
                            "type":"string",
                            "id": "root/portMapping/0/proxyPort",
                            "default": "8280",
                            "required":false

                                "required":false
                            },
                            "mappingPath": {
                                "type":"string",
                                "id": "root/persistence/volume/0/mappingPath",
                                "default": "/home/ubuntu/sdc",
                                "required":false
                            },
                            "removeOnTermination": {
                                "type":"string",
                                "id": "root/persistence/volume/0/removeOnTermination",
                                "default": "false",
                                "required":false
                            },
                            "size": {
                                "type":"string",
                                "id": "root/persistence/volume/0/size",
                                "default": "11",
                                "required":false
                            }
                        }
                    }


                }
            }
        },
        "portMapping": {
            "type":"array",
            "id": "root/portMapping",
            "required":false,
            "items":[
                {
                    "type":"object",
                    "id": "root/portMapping/0",
                    "required":false,
                    "properties":{
                        "port": {
                            "type":"string",

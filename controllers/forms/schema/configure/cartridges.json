                        "protocol": {
                            "type":"string",
                            "id": "root/portMapping/1/protocol",
                            "default": "https",
                            "required":false
                        },
                        "proxyPort": {
                            "type":"string",
                            "id": "root/portMapping/1/proxyPort",
                            "default": "8243",
                            "required":false
                        }
                    }
                }
            ]
        },
        "provider": {
            "type":"string",
            "id": "root/provider",
            "default": "apache",
            "required":false
        },
        "type": {
            "type":"string",
            "id": "root/type",
            "default": "php",
            "required":false
        },
        "version": {
            "type":"string",
            "id": "root/version",
            "default": "7",
            "required":false
        }

{
    "type":"object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "id": "root",
    "title":"Cartridge Subscribe",
    "required":false,
    "options": {
        "disable_collapse": true,
        "disable_properties":true
    },
    "properties":{
        "cartridgeType": {
            "type":"string",
            "id": "root/cartridgeType",
            "default": "php",
            "required":false,
            "options": {"hidden": true},
        },
        "alias": {
            "type":"string",
            "id": "root/alias",
            "default": "<ALIAS>",
            "required":false
        },
        "repoURL": {
            "type":"string",
            "id": "root/repoURL",
            "default": "<GIT_REPO_URL>",
            "required":false
        },
        "privateRepo": {
            "type":"string",
            "id": "root/privateRepo",
            "format":"boolean",
            "default": "true",
            "required":false
        },
        "repoUsername": {
            "type":"string",
            "id": "root/repoUsername",
            "default": "my_username",
            "required":false
        },
        "repoPassword": {
            "type":"string",
            "id": "root/repoPassword",
            "default": "my_password",
            "required":false
        },
        "commitsEnabled": {
            "type":"string",
            "id": "root/commitsEnabled",
            "default": "true",
            "required":false
        },
        "autoscalePolicy": {
            "type":"string",
            "id": "root/autoscalePolicy",
            "default": "<POLICY_NAME>",
            "required":false,
            "enum": ["auto-scale"],
            "options": {"hidden": false},
        },
        "deploymentPolicy": {
            "type":"string",
            "id": "root/deploymentPolicy",
            "default": "<POLICY_NAME>",
            "required":false,
            "enum": ["deployment"],
            "options": {"hidden": false},
        }
    }
}
